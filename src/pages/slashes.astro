<BaseLayout>
  <BoxedLayout>
    <body>
      <main>
        <div class='flex w-full justify-between'>
          <a href='/' class='text-md hover:underline'>~</a>
          <a href='/' class='text-md hover:underline'>/home</a>
        </div>
        <H1 text='Slashes' class='mt-4' />
        <P>
          Think of this page as a more concise and human-friendly
          <a
            href='/sitemap'
            target='_blank'
            rel='noopener noreferrer'
            class='underline underline-offset-2 hover:text-zinc-600'
          >
            /sitemap</a
          >. Inspired by
          <a
            href='https://slashpages.net'
            target='_blank'
            rel='noopener noreferrer'
            class='underline underline-offset-2 hover:text-zinc-600'
            >slashpages.net</a
          >.
        </P>
        <div class='mt-8 w-full'>
          {
            slashes
              .filter(slash => slash.isVisible)
              .sort((a, b) => a.link.localeCompare(b.link))
              .map(slash => (
                <div class='flex items-center' id={slash.link}>
                  <div class='w-32'>
                    <a
                      href={slash.link ?? '/404'}
                      class='text-md hover:underline'
                    >
                      {slash.nowrap ? (
                        <span class='whitespace-nowrap'>{slash.link}</span>
                      ) : (
                        slash.link
                      )}
                    </a>
                  </div>
                  <P class='w-full'>{slash.description}</P>
                </div>
              ))
          }
        </div>
      </main>
      <footer class='mt-8 w-full'>
        <div class='border-0.5 border-t border-zinc-400'></div>
        <div
          class='mt-4 flex w-full flex-col items-center justify-center gap-2 text-sm text-zinc-400'
        >
          <div class='flex items-center gap-2'>
            <a
              href='https://www.linkedin.com/in/joebashour/'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Icon
                name='fa7-brands:linkedin'
                size='1.5rem'
                class='hover:text-[#2867B2]'
              />
            </a>
            <a
              href='https://github.com/joeBash'
              target='_blank'
              rel='noopener noreferrer'
            >
              <Icon
                name='fa7-brands:github'
